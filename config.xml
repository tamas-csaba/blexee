<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.thingsplode.blexee" version="1.0.0">
    <name>blexee</name>
    <description>
        A bluetooth low energy test application
    </description>
    <author email="tamas.csaba@gmail.com" href="http://cordova.io">
        Csaba Tamas
    </author>
     <icon src="img/cake.png" platform="ios" width="57" height="57" density="mdpi" />
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="WebViewBounce" value="true" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="BackgroundColor" value="#9E9E9E"/>
    <preference name="HideKeyboardFormAccessoryBar" value="true"/>
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#4CAF50" />
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>
